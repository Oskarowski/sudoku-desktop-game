<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
   prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21"
   xmlns:fx="http://javafx.com/fxml/1">


   <center>
      <VBox alignment="CENTER" prefHeight="18.0" prefWidth="600.0">
         <children>
            <!-- Difficulty Level Label -->
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" prefWidth="602.0"
               text="%DIFFICULTY_LEVEL">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>

            <!-- Radio Buttons -->
            <HBox alignment="CENTER" spacing="20">
               <RadioButton fx:id="easyDifficultyButton" mnemonicParsing="false"
                  text="%EASY_DIFFICULTY">
                  <toggleGroup>
                     <ToggleGroup fx:id="difficultyToggleGroup" />
                  </toggleGroup>
               </RadioButton>
               <RadioButton fx:id="mediumDifficultyButton" mnemonicParsing="false"
                  text="%MEDIUM_DIFFICULTY" toggleGroup="$difficultyToggleGroup" />
               <RadioButton fx:id="hardDifficultyButton" mnemonicParsing="false"
                  text="%HARD_DIFFICULTY" toggleGroup="$difficultyToggleGroup" />
            </HBox>
         </children>
      </VBox>
   </center>


   <bottom>
      <VBox alignment="CENTER" prefHeight="154.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <ChoiceBox fx:id="gamesNameChoiceBox" prefWidth="200.0" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="exitGameButton" mnemonicParsing="false" prefHeight="26.0"
                     prefWidth="100.0" text="%EXIT_GAME" />
                  <Button fx:id="loadGameButton" mnemonicParsing="false" prefHeight="26.0"
                     prefWidth="100.0" text="%LOAD_GAME" textAlignment="CENTER" />
                  <Button fx:id="loadGameFromDBButton" mnemonicParsing="false" prefHeight="26.0"
                     prefWidth="100.0" text="%LOAD_GAME_FROM_DB" textAlignment="CENTER" />
                  <Button fx:id="startGameButton" mnemonicParsing="false" prefHeight="26.0"
                     prefWidth="100.0" text="%START_GAME" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="54.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox alignment="TOP_CENTER" prefHeight="55.0" prefWidth="240.0">
                     <Label fx:id="universityLabel" alignment="CENTER" prefHeight="20.0" prefWidth="238.0"
                        text="university placeholder" textAlignment="CENTER">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Label>
                     <Label fx:id="author1Label" text="author1 placeholder"/>
                     <Label fx:id="author2Label" text="author2 placeholder"/>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>

   <top>
      <VBox alignment="CENTER" prefHeight="117.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="36.0" prefWidth="300.0"
               text="%MENU_TITLE" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="25.0" />
               </font>
            </Label>
            <ChoiceBox fx:id="languageChoiceBox" prefHeight="26.0" prefWidth="108.0">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </ChoiceBox>
         </children>
         <BorderPane.margin>
            <Insets top="50.0" />
         </BorderPane.margin>
      </VBox>
   </top>
</BorderPane>