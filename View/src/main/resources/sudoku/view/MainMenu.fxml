<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
   prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21"
   xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Label alignment="CENTER" contentDisplay="CENTER" text="The Sudoku Game"
         textAlignment="CENTER" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
         <BorderPane.margin>
            <Insets top="70.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Difficulty: ">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Label>
            <RadioButton fx:id="easyDifficultyButton" mnemonicParsing="false" text="Easy">
               <toggleGroup>
                  <ToggleGroup fx:id="difficultyToggleGroup" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="mediumDifficultyButton" mnemonicParsing="false" text="Medium"
               toggleGroup="$difficultyToggleGroup">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </RadioButton>
            <RadioButton fx:id="hardDifficultyButton" mnemonicParsing="false" text="Hard"
               toggleGroup="$difficultyToggleGroup" />
         </children>
      </HBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="exitGameButton" mnemonicParsing="false" prefHeight="26.0"
               prefWidth="100.0" text="EXIT" />
            <Button fx:id="startGameButton" mnemonicParsing="false" prefHeight="26.0"
               prefWidth="100.0" text="PLAY" />
         </children>
      </HBox>
   </bottom>
</BorderPane>